---
import { GitHubClient, type GitHubStats } from '../../utils/github-client';
import { getServerEnv } from '../../config/env';

export interface Props {
  username?: string;
  showContributions?: boolean;
  showLanguages?: boolean;
  showRepositories?: boolean;
  maxRepos?: number;
  className?: string;
}

const {
  username,
  showContributions = true,
  showLanguages = true,
  showRepositories = true,
  maxRepos = 6,
  className = ''
} = Astro.props;

let githubStats: GitHubStats | null = null;
let error: string | null = null;
let isConfigured = false;
let githubUsername: string | undefined;
let githubToken: string | undefined;

// 改进的环境变量处理
try {
  const env = getServerEnv();
  githubUsername = env.GITHUB_USERNAME;
  githubToken = env.GITHUB_TOKEN;
  isConfigured = !!githubUsername;
  
  if (isConfigured && githubUsername) {
    const githubClient = new GitHubClient({
      username: githubUsername,
      token: githubToken
    });
    const targetUsername = username || githubUsername;
    
    if (targetUsername) {
      githubStats = await githubClient.getUserStats(targetUsername);
    } else {
      error = 'No GitHub username provided';
    }
  } else {
    error = 'GitHub is not configured. Please set GITHUB_USERNAME in your environment.';
  }
} catch (err) {
  console.error('Failed to fetch GitHub stats:', err);
  
  // 更详细的错误信息
  if (err instanceof Error) {
    if (err.message.includes('Network error') || err.message.includes('Unable to connect')) {
      error = `网络连接失败: ${err.message}`;
    } else if (err.message.includes('authentication')) {
      error = `GitHub 认证失败: ${err.message}`;
    } else if (err.message.includes('rate limit')) {
      error = `GitHub API 限制: ${err.message}`;
    } else {
      error = `GitHub 数据加载失败: ${err.message}`;
    }
  } else {
    error = 'GitHub 数据加载失败，请检查网络连接和配置';
  }
}

// 处理语言统计数据
let topLanguages: { name: string; percentage: number; bytes: number }[] = [];
if (githubStats && showLanguages) {
  const totalBytes = Object.values(githubStats.languageStats).reduce((sum, bytes) => sum + bytes, 0);
  topLanguages = Object.entries(githubStats.languageStats)
    .map(([name, bytes]) => ({
      name,
      bytes,
      percentage: totalBytes > 0 ? (bytes / totalBytes) * 100 : 0
    }))
    .sort((a, b) => b.bytes - a.bytes)
    .slice(0, 8);
}

// 语言颜色映射
const languageColors: Record<string, string> = {
  'TypeScript': '#3178c6',
  'JavaScript': '#f1e05a',
  'Python': '#3572A5',
  'Java': '#b07219',
  'C++': '#f34b7d',
  'C': '#555555',
  'Go': '#00ADD8',
  'Rust': '#dea584',
  'Vue': '#4FC08D',
  'HTML': '#e34c26',
  'CSS': '#1572B6',
  'Shell': '#89e051',
  'Dockerfile': '#384d54',
  'Jupyter Notebook': '#DA5B0B',
  'CUDA': '#3A4E3A',
  'Makefile': '#427819'
};
---

<div class={`github-stats ${className}`}>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
        GitHub 统计
      </h3>
      {githubStats && (
        <a 
          href={githubStats.user.html_url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-blue-600 hover:text-blue-800 transition-colors"
        >
          访问 GitHub 主页 ↗
        </a>
      )}
    </div>

    {error ? (
      <div class="text-center py-8">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-600">{error}</p>
      </div>
    ) : githubStats ? (
      <>
        <!-- 贡献统计概览 -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-6">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <div class="text-2xl font-bold text-green-600">{githubStats.totalCommits}</div>
            <div class="text-sm text-gray-600">总贡献</div>
          </div>
          <div class="text-center p-4 bg-blue-50 rounded-lg">
            <div class="text-2xl font-bold text-blue-600">{githubStats.user.public_repos}</div>
            <div class="text-sm text-gray-600">活跃仓库</div>
          </div>
          <div class="text-center p-4 bg-purple-50 rounded-lg">
            <div class="text-2xl font-bold text-purple-600">{new Date().getFullYear() - new Date(githubStats.user.created_at).getFullYear()}</div>
            <div class="text-sm text-gray-600">活跃年份</div>
          </div>
        </div>

        <!-- 编程语言统计 - 全宽显示 -->
        {showLanguages && topLanguages.length > 0 && (
          <div class="mb-6">
            <h4 class="font-semibold text-gray-800 mb-4">主要编程语言</h4>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
              {topLanguages.slice(0, 8).map((lang) => (
                <div class="bg-gray-50 p-3 rounded-lg">
                  <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center">
                      <span 
                        class="w-3 h-3 rounded-full mr-2"
                        style={`background-color: ${languageColors[lang.name] || '#6b7280'}`}
                      ></span>
                      <span class="text-sm font-medium text-gray-700">{lang.name}</span>
                    </div>
                    <span class="text-sm font-bold text-gray-900">{lang.percentage.toFixed(1)}%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div 
                      class="h-2 rounded-full transition-all duration-300"
                      style={`width: ${lang.percentage}%; background-color: ${languageColors[lang.name] || '#6b7280'}`}
                    ></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- 贡献活动展示 -->
        {showContributions && (
          <div class="mt-6">
            <h4 class="font-semibold text-gray-800 mb-4">贡献活动</h4>
            <div class="bg-gradient-to-r from-green-50 to-blue-50 p-6 rounded-lg">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="text-center">
                  <div class="text-3xl font-bold text-green-600 mb-1">
                    {githubStats.totalCommits}
                  </div>
                  <div class="text-sm text-gray-600">今年总贡献</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-blue-600 mb-1">
                    {Math.round(githubStats.totalCommits / 12)}
                  </div>
                  <div class="text-sm text-gray-600">月均贡献</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-purple-600 mb-1">
                    {Math.round(githubStats.totalCommits / 52)}
                  </div>
                  <div class="text-sm text-gray-600">周均贡献</div>
                </div>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-3 justify-center">
                <a 
                  href={`${githubStats.user.html_url}?tab=overview&from=${new Date().getFullYear()}-01-01&to=${new Date().getFullYear()}-12-31`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-4 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                >
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"></path>
                  </svg>
                  查看贡献热力图
                </a>
                <a 
                  href={`${githubStats.user.html_url}?tab=repositories`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700 transition-colors"
                >
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"></path>
                  </svg>
                  浏览所有项目
                </a>
              </div>
            </div>
          </div>
        )}
      </>
    ) : (
      <div class="text-center py-8">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2.586a1 1 0 00-.707.293l-1.414 1.414a1 1 0 01-.707.293h-2.172a1 1 0 01-.707-.293L13.586 13H11v4a1 1 0 01-1 1H6v-4h2.414a1 1 0 00.707-.293L10.586 13H16"></path>
        </svg>
        <p class="text-gray-600">暂无 GitHub 数据</p>
      </div>
    )}
  </div>
</div>

<style>
  .github-stats {
    @apply w-full;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .github-stats .grid-cols-4 {
      @apply grid-cols-2;
    }
    
    .github-stats .md\:grid-cols-2 {
      @apply grid-cols-1;
    }
  }
</style>